<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="Add admin user" author="maypink">
        <insert tableName="auth_db">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="ADMIN"/>
            <column name="authority" value="ADMIN"/>
        </insert>

        <insert tableName="user_db">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="ADMIN_USER"/>
            <column name="email" value="email"/>
            <column name="password" value="password"/>
        </insert>

        <insert tableName="users_roles">
            <column name="id" valueNumeric="1"/>
            <column name="user_id" valueNumeric="1"/>
            <column name="role_id" valueNumeric="1"/>
        </insert>
    </changeSet>
</databaseChangeLog>