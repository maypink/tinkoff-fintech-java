<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="Create table Weather" author="maypink">
        <createTable tableName="Weather">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar" />
            <column name="region" type="varchar" />
            <column name="country" type="varchar" />
            <column name="tempC" type="int"/>
            <column name="tempF" type="int" />
        </createTable>

<!--        <addAutoIncrement columnDataType="uuid"-->
<!--                          columnName="id"-->
<!--                          incrementBy="1"-->
<!--                          startWith="0"-->
<!--                          tableName="Weather"/>-->

        <createIndex indexName="idx_simple_weather" tableName="Weather">
            <column descending="true" name="name"/>
        </createIndex>

        <createIndex clustered="true"
                     indexName="idx_complex_weather"
                     tableName="Weather"
                     unique="true">
            <column descending="true" name="name"/>
            <column descending="true" name="tempC"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>
